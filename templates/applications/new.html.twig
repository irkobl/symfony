{% extends 'base.html.twig' %}

{% block title %}New Applications{% endblock %}

{% block body %}
<div class="col-6">
    <h3 class="d-flex justify-content-center">Создать заявку</h3>

    {{ form_start(form) }}       

        <div class="form-group">            
            {{ form_row(form.title, {'label': 'Заголовок', 'label_attr': {'class': 'form-label'}, 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.text, {'label': 'Основной текст', 'label_attr': {'class': 'form-label'}, 'attr': {'class': 'form-control', 'rows' : '6'}}) }}
        </div>
        <div class="form-group mt-3">            
            {{ form_row(form.application_file, {'label': 'Загрузить файлы', 'label_attr': {'class': 'form-label'}, 'attr': {'class': 'form-control', 'type' : 'file'}}) }}
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn {{ button_color|default('btn-outline-primary') }}  mt-3" >{{ button_label|default('Сохранить') }}</button>
        </div>        
        
    {{ form_end(form) }} 

    <a href="{{ path('app_index') }}">Перейти к списку</a>
</div>    
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}МФЦ Иркутской области{% endblock %}

{% block body %}

    
    <div class="col-12">
        
        <h3 class="d-flex justify-content-center">Список заявок</h3>
        <div class="card-header mb-3">
            <a class="btn btn-outline-primary" href="{{ path('app_applications_new') }}"> 
                Создать заявку 
            </a>
        </div>
        {% for application in applications %}            
            <div class="card border-light mb-3 w-100">
                <div class="card-header d-flex flex-row" >
                    <p>#{{ application.id }}</p>&ensp;
                    / Создано: {{ application.createdAt ? application.createdAt|date('Y-m-d H:i:s') : '' }} /
                    Обновлено: {{ application.updatedAt ? application.updatedAt|date('Y-m-d H:i:s') : '' }} /
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ application.title }}</h5>
                    <p class="card-text text-truncate" style="margin-bottom: 0;">{{ application.text }}</p>
                    <div>
                        <blockquote class="blockquote-footer" style="margin-top: 0;">
                            <small class="text-muted">
                                Файлы:&nbsp; 
                            </small>
                            
                            <a href="/download/{{ application.file1 ? application.file1 : '' }}" class="card-link" download>
                                <small>{{ application.file1 ? application.file1 : '' }}</small>
                            </a>
                            <a href="/download/{{ application.file2 ? application.file2 : '' }}" class="card-link" download>
                                <small>{{ application.file2 ? application.file2 : '' }}</small>
                            </a>
                            <a href="/download/{{ application.file3 ? application.file3 : '' }}" class="card-link" download>
                                <small>{{ application.file3 ? application.file3 : '' }}</small>
                            </a>
                        </blockquote> 
                    </div>
                    <a href="{{ path('app_applications_show', {'id': application.id}) }}" class="card-link">Просмотр</a>
                    <a href="{{ path('app_applications_edit', {'id': application.id}) }}" class="card-link">Изменить</a>
                </div>
            </div>
        {% else %}
            <div class="alert alert-primary" role="alert">
                <td colspan="10">Заявки отсутствуют</td>
            </div>            
        {% endfor %}
    </div>
    <script type="text/javascript" src="/refresh.js"></script>
{% endblock %}
